<div class="container">
  <div class="row">
    <div class="col-md-auto mb-3" style="background-color: #DDDDDD;">
        <h3><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h3>
    </div>
  </div>

  <div class="row">
    <table class="col-6">
      <tr>
        <th class="col-sm-2">会員ID</th>
        <td class="col-sm-3" ><%= @customer.id %></td>
      </tr>

      <tr>
        <th class="col-sm-2">氏名</th>
        <td class="col-sm-3" ><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>

      <tr>
        <th class="col-sm-2">フリガナ</th>
        <td class="col-sm-3" ><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <th class="col-sm-2">郵便番号</th>
        <td class="col-sm-3" ><%= @customer.postal_code %></td>
      </tr>

      <tr>
        <th class="col-sm-2">住所</th>
        <td class="col-sm-3" ><%= @customer.address %></td>
      </tr>

      <tr>
        <th class="col-sm-2">電話番号</th>
        <td class="col-sm-3" ><%= @customer.telephone_number %></td>
      </tr>

      <tr>
        <th class="col-sm-2">メールアドレス</th>
        <td class="col-sm-3" ><%= @customer.email %></td>
      </tr>

      <tr>
        <th class="col-sm-2">会員ステータス</th>
          <% if @customer.is_active == true %>
            <td class="text-success font-weight-bold col-sm-3">
              有効
            </td>
          <% else %>
            <td class="text-muted font-weight-bold col-sm-3">
              退会
            </td>
          <% end %>
      </tr>
    </table>
  </div>
  </br>
  <div class="row">
    <div class="col-2">
    <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
    </div>
    <div class="col-3">
    <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>