<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    <span>(姓)</span>
    <%= f.text_field :last_name %>
    <span>(名)</span>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <span>(セイ)</span>
    <%= f.text_field :last_name_kana %>
    <span>(メイ)</span>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>
    (ハイフンなし)
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    (ハイフンなし)
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    (確認用)
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<div>すでに登録済みの方</div>
<%= render "public/shared/links" %>からログインしてください。