<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-auto mb-3 bg-light">
      <h3>マイページ</h3>
    </div>
    <div class="col-md-8">
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 font-weight-bold">
      登録情報
    </div>
    <div class="col-md-2">
      <%= link_to "編集する", customers_edit_path, class: "btn btn-success btn-sm btn-block" %>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered">
        <tr>
          <th class="bg-light" style="width: 30%">氏名</th>
          <td style="width: 70%"><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="bg-light" style="width: 30%">カナ</th>
          <td style="width: 70%"><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="bg-light" style="width: 30%">郵便番号</th>
          <td style="width: 70%"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="bg-light" style="width: 30%">住所</th>
          <td style="width: 70%"><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="bg-light" style="width: 30%">電話番号</th>
          <td style="width: 70%"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="bg-light" style="width: 30%">メールアドレス</th>
          <td style="width: 70%"><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col-md-2 font-weight-bold">
      配送先
    </div>
    <div class="col-md-2">
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary btn-sm btn-block" %>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col-md-2 font-weight-bold">
      注文履歴
    </div>
    <div class="col-md-2">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm btn-block" %>
    </div>
  </div>