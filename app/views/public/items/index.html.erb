<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= render 'public/search', genres: @genres%>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-9">
      <div class="row mx-auto">
        <h3>商品一覧</h3>
        <h6 class="d-flex align-items-end">（全<%= @all_items.count %>件）</h6>
      </div>

      <div class="row">
        <% @items.each do |item| %>
          <div class="col-sm-3">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, format: 'jpg', size: "50x50" %></br>
              <%= item.name %></br>
              ￥<%= item.price.to_s(:delimited) %>
            <% end %>
          </div>
        <% end %>
      </div>
      </br>
      <div class="row">
        <div class="mx-auto">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>